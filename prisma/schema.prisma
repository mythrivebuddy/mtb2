  admin     User     @relation("AdminRewards", fields: [adminId], references: [id])
  cycle     Cycle    @relation(fields: [cycleId], references: [id])
  member    User     @relation("MemberRewards", fields: [memberId], references: [id])

  @@index([adminId])
  @@index([memberId])
  @@index([cycleId])
}
